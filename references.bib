	keywords = {Categories, Chromium, Copper measurement, Dietary Nickel, Electron Microprobe Analysis, Electron Microscopy, Equivalent Weight, Fallopia multiflora plant, Iron, LL parser, Minerals, Moderate Response, Organic Chemicals, Oxides, Pet Rock, Silicates, Trace Elements, clay, ferric oxide, forsterite, mg/kg, mixture, spinell}
}

@article{lee_geochemistry_2004,
