}

@article{engle_interpretation_2013,
	title = {Interpretation of {Na}–{Cl}–{Br} {Systematics} in {Sedimentary} {Basin} {Brines}: {Comparison} of {Concentration}, {Element} {Ratio}, and {Isometric} {Log}-ratio {Approaches}},
	volume = {45},
