@article{lipp_major_2020,
	title = {Major {Element} {Composition} of {Sediments} in {Terms} of {Weathering} and {Provenance}: {Implications} for {Crustal} {Recycling}},
	volume = {21},
	copyright = {©2020. The Authors.},
	issn = {1525-2027},
	shorttitle = {Major {Element} {Composition} of {Sediments} in {Terms} of {Weathering} and {Provenance}},
