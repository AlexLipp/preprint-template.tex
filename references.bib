	urldate = {2019-02-11},
	journal = {Lithos},
	author = {Cullers, Robert L},
	month = mar,
	year = {2000},
	keywords = {Metamorphism, Provenance, Rare-earth elements, Sandstones, Shales, Trace elements},
	pages = {181--203}
}

