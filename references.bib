	journal = {Journal of South American Earth Sciences},
	author = {Starck, Daniel and Papa, Cecilia del},
	month = dec,
	year = {2006},
	keywords = {Carbonífero tardío, Cuenca Tarija, Glaciaciones Gondwana, Gondwana glaciation, Late Carboniferous, Noroeste Argentino, Northwestern Argentina, Tarija Basin},
	pages = {169--184}
}

