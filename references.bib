	year = {2016},
	note = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1002/2016GC006324},
	keywords = {Archean komatiite, Barberton Greenstone Belt, Hf-W, Lu-Hf, Sm-Nd, and Re-Os isotopic systems, early differentiation, extinct radioactivity, highly siderophile elements, late accretion, magma ocean},
	pages = {2168--2193}
