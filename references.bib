@article{hofmann_geochemistry_2005,
	title = {The geochemistry of sedimentary rocks from the {Fig} {Tree} {Group}, {Barberton} greenstone belt: {Implications} for tectonic, hydrothermal and surface processes during mid-{Archaean} times},
