	journal = {Geological Society of America Bulletin},
	author = {Hower, John and Eslinger, Eric V. and Hower, Mark E. and Perry, Edward A.},
	month = may,
	year = {1976},
	keywords = {Geochemistry, burial metamorphism, clay mineralogy, sedimentary petrology, x-ray diffraction analysis},
	pages = {725--737}
}

@article{van_graas_biomarker_1990,
