	journal = {American Journal of Science},
	author = {Hren, Michael T. and Hilley, George E. and Chamberlain, C. Page},
	month = nov,
	year = {2007},
	pages = {1041--1063}
}
@article{mills_changing_2014,
	title = {Changing tectonic controls on the long-term carbon cycle from {Mesozoic} to present},
	volume = {15},
