	author = {Stallard, R. F. and Edmond, J. M.},
	month = nov,
	year = {1983},
	pages = {9671--9688}
}

@article{stallard_geochemistry_1981,
	title = {Geochemistry of the {Amazon}: 1. {Precipitation} chemistry and the marine contribution to the dissolved load at the time of peak discharge},
	volume = {86},
	copyright = {Copyright 1981 by the American Geophysical Union.},
	issn = {2156-2202},
