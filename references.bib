@article{tyler_geology_1996,
	title = {Geology and {Geochemistry} of the transvaal {supergroupStratigraphic} and structural controls on gold mineralization in the {Pilgrim}'s {Rest} goldfield, eastern {Transvaal}, {South} {Africa}},
