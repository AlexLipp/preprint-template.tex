	number = {1},
	urldate = {2019-01-30},
	journal = {Geological Society, London, Memoirs},
	author = {Carto, Shannon L. and Eyles, Nick},
	month = jan,
	year = {2011},
	pages = {467--473}
}

@article{le_heron_interglacial_2013,
