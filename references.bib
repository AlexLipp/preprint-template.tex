	journal = {Geochimica et Cosmochimica Acta},
	author = {Jin, Lixin and Ravella, Ramesh and Ketchum, Blake and Bierman, Paul R. and Heaney, Peter and White, Timothy and Brantley, Susan L.},
	month = jul,
	year = {2010},
