	year = {2003},
	keywords = {Bedrock, Solute flux, Weathering},
	pages = {313--341}
}

@inproceedings{soubrand-colin_weathering_2005,
	title = {{WEATHERING} {OF} {BASALTIC} {ROCKS} {FROM} {THE} {FRENCH} {MASSIF} {CENTRAL}: {ORIGIN} {AND} {FATE} {OF} {Ni}, {Cr}, {Zn} {AND} {Cu}},
	shorttitle = {{WEATHERING} {OF} {BASALTIC} {ROCKS} {FROM} {THE} {FRENCH} {MASSIF} {CENTRAL}},
